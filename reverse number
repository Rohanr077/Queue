#include <stdio.h>

int main(){

    int Num, reverseNum = 0, remainder;

    printf("Enter the number to reverse: ");

    scanf("%d", &Num);    

    while (Num != 0){

        remainder = Num % 10;

        reverseNum = reverseNum * 10 + remainder;

        Num = Num/10;

    }    

    printf("The reversed number is: %d", reverseNum);

    return 0;

}
